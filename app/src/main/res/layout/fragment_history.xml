<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HistoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/paginationLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp">

            <LinearLayout
                android:id="@+id/ll_history_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Kehadiran"
                    android:textSize="32sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/noto_sans_gujarati_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"  >

                    <Button
                        android:id="@+id/btn_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:text="dd/mm/yyyy"
                        android:textSize="16sp"
                        android:fontFamily="@font/noto_sans_gujarati_regular"
                        android:background="@drawable/bg_search"
                        app:backgroundTint="@null"
                        android:drawableLeft="@drawable/icon_date"
                        android:drawablePadding="16dp"/>

                    <Button
                        android:id="@+id/btn_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="dd/mm/yyyy"
                        android:textSize="16sp"
                        android:fontFamily="@font/noto_sans_gujarati_regular"
                        android:background="@drawable/bg_search"
                        app:backgroundTint="@null"
                        android:drawableLeft="@drawable/icon_date"
                        android:drawablePadding="16dp"/>

                    <ImageView
                        android:id="@+id/iv_download"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bg_search"
                        android:src="@drawable/icon_download"
                        android:padding="8dp"/>

                    <ImageView
                        android:id="@+id/iv_clear_search"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bg_search"
                        android:src="@drawable/icon_close"
                        android:padding="8dp"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_history_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical">
                <!-- Summary boxes (Total, Hadir, Tidak Hadir) -->
                <LinearLayout
                    android:id="@+id/ll_summary_total"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/secondary"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans_gujarati_regular"/>

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans_gujarati_bold"/>
                </LinearLayout>
                <!-- ... Present ... -->
                <LinearLayout
                    android:id="@+id/ll_summary_present"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:padding="16dp"
                    android:background="@color/secondary"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_present_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hadir"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans_gujarati_regular"/>

                    <TextView
                        android:id="@+id/tv_present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans_gujarati_bold"/>
                </LinearLayout>
                <!-- ... Absent ... -->
                <LinearLayout
                    android:id="@+id/ll_summary_absent"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/secondary"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_absent_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Hadir"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans_gujarati_regular"/>

                    <TextView
                        android:id="@+id/tv_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans_gujarati_bold"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:text="Maaf, data tidak ditemukan."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_sans_gujarati_regular"
                android:visibility="gone" />

            <TableLayout
                android:id="@+id/attendanceTableView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="16dp" />

            <!-- BAGIAN PAGINATION BARU -->
            <LinearLayout
                android:id="@+id/paginationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btnPrevPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sebelumnya"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_secondary"
                    app:backgroundTint="@null"/>

                <TextView
                    android:id="@+id/tvPageInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Halaman 1/1"/>

                <Button
                    android:id="@+id/btnNextPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selanjutnya"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_secondary"
                    app:backgroundTint="@null"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>